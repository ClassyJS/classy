{
    "name"    : "zippy-class",
    "version" : "1.0.0",
    "private" : true,
    "devDependencies": {
        "browserify": "^3.44.2",
        "watchify": "^0.8.2",
        "karma": "^0.12.14",
        "karma-jasmine": "^0.1.5",
        "karma-chrome-launcher": "^0.1.3"
    },
    "scripts": {
        "build"  : "browserify src/index.js -s ZippyClass -o dist/ZippyClass.js",
        "watch"  : "watchify src/index.js -s ZippyClass -o dist/ZippyClass.js",
        "dev"    : "npm run build | npm run watch",
        "test"   : "karma start",
        "server" : "python -m SimpleHTTPServer"
    },
    "main": "index.js"
}